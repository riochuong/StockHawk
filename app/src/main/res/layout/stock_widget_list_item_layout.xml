<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_stock_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_stock_symbol"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/widget_stock_symbol_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/widget_stock_price"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/widget_stock_price_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/widget_stock_change"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/widget_stock_price_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</LinearLayout>