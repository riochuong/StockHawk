<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_stock_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_stock_symbol"
        android:fontFamily="sans-serif"
        android:layout_margin="@dimen/widget_layout_margin"
        android:textSize="@dimen/widget_stock_symbol_text_size"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/widget_layout_margin"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/widget_stock_price"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/widget_stock_price_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/widget_stock_change"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/widget_stock_change_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>