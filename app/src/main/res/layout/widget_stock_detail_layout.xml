<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold|italic"
            android:textSize="@dimen/widget_title_size"
            android:text="@string/widget_title_text"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/widget_layout_margin"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/widget_stock_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/stock_widget_list_item_layout"
            >
        </ListView>
    </FrameLayout>

</LinearLayout>